<?xmlSettingsPath version="1.0" encoding="UTF-8"?>
<configuration>
    <appender bindingName="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss,SSS Z} [%highlight(%-5level)] [%cyan(%class{0})] %mdc: %msg%n</pattern>
        </encoder>
    </appender>

    <logger bindingName="com.panbet.monitoring" level="ALL" additivity="false">
        <appender-ref ref="ConsoleAppender"/>
    </logger>

    <logger bindingName="com.panbet.payment.api.zabbix" level="ERROR" additivity="false">
    <appender-ref ref="ConsoleAppender"/>
    </logger>

    <logger bindingName="org.springframework" level="ERROR" additivity="false">
        <appender-ref ref="ConsoleAppender"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="ConsoleAppender"/>
    </root>
</configuration>
