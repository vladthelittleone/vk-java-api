<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
   http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd
      ">

    <context:property-placeholder location="../../resources/persistence.properties"/>
    <context:component-scan base-package="vk.java.api.persistence"/>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driver.name}" />
        <property name="url" value="${jdbc.person.url}" />
        <property name="username" value="${jdbc.username}" />
        <property name="password" value="${jdbc.password}" />
    </bean>

    <bean name="PersonDao" class="vk.java.api.persistence.dao.PersonMySqlDao">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean name="LikesDao" class="vk.java.api.persistence.dao.LikesMySqlDao">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

</beans>
